<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>COMMAND_LIST</key>
	<array>
		<dict>
			<key>NAME</key>
			<string>Show File Info</string>
			<key>COMMAND_ID</key>
			<string>show_file_info</string>
			<key>ACTIVATION_MODE</key>
			<string>act_file_or_folder</string>
			<key>EXECUTION_MODE</key>
			<string>exe_shell_script_with_output_window</string>
			<key>COMMAND</key>
			<array>
				<string>/usr/bin/stat -x "${OMC_OBJ_PATH}"</string>
			</array>
			<key>OUTPUT_WINDOW_SETTINGS</key>
			<dict>
				<key>TEXT_FONT</key>
				<string>Monaco</string>
				<key>TEXT_SIZE</key>
				<integer>11</integer>
				<key>WINDOW_ALPHA</key>
				<real>1</real>
				<key>WINDOW_CLOSE_FADE_OUT</key>
				<true/>
				<key>WINDOW_OPEN_FADE_IN</key>
				<true/>
				<key>WINDOW_POSITION</key>
				<string>alert</string>
				<key>WINDOW_TITLE</key>
				<string>File Info</string>
				<key>WINDOW_TYPE</key>
				<string>regular</string>
				<key>WINDOW_WIDTH</key>
				<integer>700</integer>
			</dict>
		</dict>
		<dict>
			<key>NAME</key>
			<string>Copy Path</string>
			<key>COMMAND_ID</key>
			<string>copy_path</string>
			<key>ACTIVATION_MODE</key>
			<string>act_file_or_folder</string>
			<key>EXECUTION_MODE</key>
			<string>exe_shell_script</string>
			<key>COMMAND</key>
			<array>
				<string>printf "${OMC_OBJ_PATH}" | /usr/bin/pbcopy</string>
			</array>
		</dict>
		<dict>
			<key>NAME</key>
			<string>Open Terminal Here</string>
			<key>COMMAND_ID</key>
			<string>open_terminal_here</string>
			<key>ACTIVATION_MODE</key>
			<string>act_folder</string>
			<key>EXECUTION_MODE</key>
			<string>exe_terminal</string>
			<key>COMMAND</key>
			<array>
				<string>cd "${OMC_OBJ_PATH}" &amp;&amp; clear &amp;&amp; pwd</string>
			</array>
		</dict>
		<dict>
			<key>NAME</key>
			<string>New Text File Here</string>
			<key>COMMAND_ID</key>
			<string>new_textfile_here</string>
			<key>ACTIVATION_MODE</key>
			<string>act_folder</string>
			<key>EXECUTION_MODE</key>
			<string>exe_shell_script</string>
			<key>COMMAND</key>
			<array>
				<string>/usr/bin/touch "${OMC_OBJ_PATH}/New File.txt"</string>
			</array>
		</dict>
		<dict>
			<key>NAME</key>
			<string>Sort Lines To Clipboard</string>
			<key>COMMAND_ID</key>
			<string>sort_lines</string>
			<key>ACTIVATION_MODE</key>
			<string>act_selected_text</string>
			<key>EXECUTION_MODE</key>
			<string>exe_shell_script</string>
			<key>COMMAND</key>
			<array>
				<string>echo "${OMC_OBJ_TEXT}" | /usr/bin/sort | /usr/bin/pbcopy</string>
			</array>
			<key>END_NOTIFICATION</key>
			<dict>
				<key>TITLE</key>
				<string>Sorted</string>
				<key>MESSAGE</key>
				<string>Sorted text copied to clipboard</string>
			</dict>
		</dict>
		<dict>
			<key>NAME</key>
			<string>Count Text Lines, Words and Characters</string>
			<key>COMMAND_ID</key>
			<string>count_lines_words</string>
			<key>ACTIVATION_MODE</key>
			<string>act_selected_text</string>
			<key>EXECUTION_MODE</key>
			<string>exe_shell_script_with_output_window</string>
			<key>COMMAND</key>
			<array>
				<string>line_count=$(echo "${OMC_OBJ_TEXT}" | /usr/bin/wc -l)
word_count=$(echo "${OMC_OBJ_TEXT}" | /usr/bin/wc -w)
char_count=$(echo "${OMC_OBJ_TEXT}" | /usr/bin/wc -m)
echo "Line count:      ${line_count}"
echo "Word count:      ${word_count}"
echo "Character count: ${char_count}"
				</string>
			</array>
			<key>OUTPUT_WINDOW_SETTINGS</key>
			<dict>
				<key>TEXT_FONT</key>
				<string>Monaco</string>
				<key>TEXT_SIZE</key>
				<integer>11</integer>
				<key>WINDOW_ALPHA</key>
				<real>1</real>
				<key>WINDOW_CLOSE_FADE_OUT</key>
				<true/>
				<key>WINDOW_OPEN_FADE_IN</key>
				<true/>
				<key>WINDOW_POSITION</key>
				<string>alert</string>
				<key>WINDOW_TYPE</key>
				<string>regular</string>
				<key>WINDOW_WIDTH</key>
				<integer>300</integer>
			</dict>
		</dict>
	</array>
	<key>VERSION</key>
	<integer>2</integer>
</dict>
</plist>
